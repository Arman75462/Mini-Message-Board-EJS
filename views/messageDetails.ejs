<html>
  <head>
    <title>Message details</title>
  </head>

  <body>
    <% if (notFound) { %>
    <h1 style="color: red">Message not found!</h1>
    <a href="/">Back to all messages</a>

    <% } else { %>
    <h1>Message Details</h1>
    <p><strong>User:</strong> <%= messageDetails.username %></p>
    <p><strong>Message:</strong> <%= messageDetails.message %></p>
    <p><strong>Added:</strong> <%= messageDetails.date %></p>
    <a href="/">Back</a>
    <% } %>
  </body>
</html>
